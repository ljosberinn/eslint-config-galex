{
  "name": "eslint-config-galex",
  "version": "2.13.5",
  "description": "personal ESLint ruleset of galex",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint . --fix && prettier --write .",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration:cra-js": "cd examples/cra-js && yarn --frozen-lockfile && yarn lint",
    "test:integration:cra-ts": "cd examples/cra-ts && yarn --frozen-lockfile && yarn lint",
    "test:integration:next-js": "cd examples/next-js && yarn --frozen-lockfile && yarn lint",
    "test:integration:next-ts": "cd examples/next-ts && yarn --frozen-lockfile && yarn lint",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ljosberinn/eslint-config-galex.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "galex",
    "javascript",
    "styleguide",
    "typescript",
    "react",
    "nextjs",
    "typescript",
    "jest",
    "testing-library"
  ],
  "author": "Gerrit Alex <admin@gerritalex.de> (https://gerritalex.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ljosberinn/eslint-config-galex/issues"
  },
  "homepage": "https://github.com/ljosberinn/eslint-config-galex#readme",
  "dependencies": {
    "@babel/core": "7.13.14",
    "@babel/eslint-parser": "7.13.14",
    "@next/eslint-plugin-next": "10.1.1",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "confusing-browser-globals": "1.0.10",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-inclusive-language": "2.1.1",
    "eslint-plugin-jest": "24.3.2",
    "eslint-plugin-jest-dom": "3.7.0",
    "eslint-plugin-jest-formatting": "2.0.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-sonarjs": "0.6.0",
    "eslint-plugin-testing-library": "3.10.2",
    "eslint-plugin-unicorn": "29.0.0",
    "read-pkg-up": "7.0.1",
    "typescript": "4.2.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/jest": "26.0.22",
    "eslint": "7.23.0",
    "jest": "26.6.3",
    "jest-watch-typeahead": "0.6.1",
    "prettier": "2.2.1",
    "semantic-release": "17.4.2"
  },
  "peerDependencies": {
    "eslint": ">=7.15.0"
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/(overrides|rulesets)/**/*.{js,jsx,ts,tsx}",
      "src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "coverageDirectory": "coverage",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ]
    ]
  }
}
